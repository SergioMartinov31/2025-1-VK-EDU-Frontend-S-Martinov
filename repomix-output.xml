      console.error('‚ùå –ù–µ—Ç ID —á–∞—Ç–∞ –¥–ª—è –æ—Ç–ø—Ä–∞–≤–∫–∏ –≥–æ–ª–æ—Å–æ–≤–æ–≥–æ —Å–æ–æ–±—â–µ–Ω–∏—è');
      alert('–í—ã–±–µ—Ä–∏—Ç–µ —á–∞—Ç –¥–ª—è –æ—Ç–ø—Ä–∞–≤–∫–∏ —Å–æ–æ–±—â–µ–Ω–∏—è');
      return;
    }

    if (!setChats) {
      console.error('‚ùå –ù–µ—Ç setChats –¥–ª—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —Å–æ—Å—Ç–æ—è–Ω–∏—è');
      alert('–û—à–∏–±–∫–∞: –Ω–µ –º–æ–≥—É –æ–±–Ω–æ–≤–∏—Ç—å —á–∞—Ç—ã');
      return;
    }

    try {
      const formData = new FormData();
      formData.append('voice', file);
      formData.append('duration', duration || 0);

      console.log(`üì§ –û—Ç–ø—Ä–∞–≤–ª—è—é –≥–æ–ª–æ—Å–æ–≤–æ–µ –≤ —á–∞—Ç ${currentChatId}`, {
        filename: file.name,
        size: file.size,
        type: file.type
      });

      const response = await fetch(`http://localhost:3001/api/chats/${currentChatId}/voice-upload`, {
        method: 'POST',
        body: formData,
      });

      if (!response.ok) {
        const errorText = await response.text();
        throw new Error(`HTTP ${response.status}: ${errorText}`);
      }

      const result = await response.json();
      console.log('‚úÖ –û—Ç–≤–µ—Ç –æ—Ç —Å–µ—Ä–≤–µ—Ä–∞:', result);
      
      // –í–û–¢ –°–ê–ú–û–ï –í–ê–ñ–ù–û–ï! –û–±–Ω–æ–≤–ª—è–µ–º —Å–æ—Å—Ç–æ—è–Ω–∏–µ —á–∞—Ç–æ–≤
      if (result.chats && setChats) {
        console.log('üîÑ –û–±–Ω–æ–≤–ª—è—é —Å–æ—Å—Ç–æ—è–Ω–∏–µ —á–∞—Ç–æ–≤...');
        setChats(result.chats); // ‚Üê –û–ë–ù–û–í–õ–Ø–ï–ú –ß–ê–¢–´
        
        // –î–ª—è –æ—Ç–ª–∞–¥–∫–∏ - –ø–æ—Å–º–æ—Ç—Ä–∏–º —á—Ç–æ –æ–±–Ω–æ–≤–∏–ª–∏
        const updatedChat = result.chats.find(chat => chat.id === currentChatId);
        console.log('üí¨ –û–±–Ω–æ–≤–ª–µ–Ω–Ω—ã–π —á–∞—Ç:', updatedChat);
        console.log('üé§ –ü–æ—Å–ª–µ–¥–Ω–µ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ:', updatedChat?.messages?.slice(-1));
      } else {
        console.warn('‚ö†Ô∏è –ù–µ –ø–æ–ª—É—á–∏–ª–æ—Å—å –æ–±–Ω–æ–≤–∏—Ç—å —á–∞—Ç—ã:', {
          hasChats: !!result.chats,
          hasSetChats: !!setChats
        });
      }

    } catch (error) {
      console.error('‚ùå –û—à–∏–±–∫–∞ –ø—Ä–∏ –æ—Ç–ø—Ä–∞–≤–∫–µ –≥–æ–ª–æ—Å–æ–≤–æ–≥–æ —Å–æ–æ–±—â–µ–Ω–∏—è:', error);
      alert(`–û—à–∏–±–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏: ${error.message}`);
    }
  };

  // –û—Å—Ç–∞–ª—å–Ω–æ–π –∫–æ–¥ –æ—Å—Ç–∞–µ—Ç—Å—è —Ç–∞–∫–∏–º –∂–µ, –∫–∞–∫ —É —Ç–µ–±—è –±—ã–ª–æ
  const getSupportedMimeType = () => {
    const types = [
      'audio/webm;codecs=opus',
      'audio/webm',
      'audio/ogg;codecs=opus', 
      'audio/mp4',
      'audio/mpeg'
    ];
    
    for (let type of types) {
      if (MediaRecorder.isTypeSupported(type)) {
        console.log('–ü–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ–º—ã–π —Ç–∏–ø:', type);
        return type;
      }
    }
    console.log('–ù–∏ –æ–¥–∏–Ω MIME-—Ç–∏–ø –Ω–µ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ—Ç—Å—è, –∏—Å–ø–æ–ª—å–∑—É–µ–º –¥–µ—Ñ–æ–ª—Ç–Ω—ã–π');
    return '';
  };

  useEffect(() => {
    if (typeof window !== 'undefined' && navigator.mediaDevices) {
      navigator.mediaDevices
        .getUserMedia({ audio: true })
        .then(() => {
          setPermission(true);
        })
        .catch((err) => {
          console.error('–û—à–∏–±–∫–∞ –¥–æ—Å—Ç—É–ø–∞ –∫ –º–∏–∫—Ä–æ—Ñ–æ–Ω—É:', err);
          setPermission(false);
        });
    }
  }, []);

  const startRecording = async () => {
    if (!permission) {
      alert('–ù–µ—Ç –¥–æ—Å—Ç—É–ø–∞ –∫ –º–∏–∫—Ä–æ—Ñ–æ–Ω—É');
      return;
    }

    if (!currentChatId) {
      alert('–°–Ω–∞—á–∞–ª–∞ –≤—ã–±–µ—Ä–∏—Ç–µ —á–∞—Ç –¥–ª—è –æ—Ç–ø—Ä–∞–≤–∫–∏ —Å–æ–æ–±—â–µ–Ω–∏—è');
      return;
    }

    try {
      const stream = await navigator.mediaDevices.getUserMedia({ 
        audio: true
      });

      streamRef.current = stream;
      const mimeType = getSupportedMimeType();
      const options = mimeType ? { mimeType } : {};
      mediaRecorderRef.current = new MediaRecorder(stream, options);

      audioChunksRef.current = [];
      shouldSendRef.current = false;

      // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –¥–∞–Ω–Ω—ã—Ö
      mediaRecorderRef.current.ondataavailable = (event) => {
        if (event.data.size > 0) {
          audioChunksRef.current.push(event.data);
        }
      };

      // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∑–∞–≤–µ—Ä—à–µ–Ω–∏—è –∑–∞–ø–∏—Å–∏
      mediaRecorderRef.current.onstop = async () => {
        if (audioChunksRef.current.length === 0) {
          console.log('–ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö –∑–∞–ø–∏—Å–∏');
          return;
        }

        console.log('–ó–∞–ø–∏—Å—å –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∞');

        const blobType = mediaRecorderRef.current?.mimeType || 'audio/webm';
        const audioBlob = new Blob(audioChunksRef.current, { type: blobType });
        
        // –°–æ–∑–¥–∞–µ–º —Ñ–∞–π–ª
        const fileName = `voice_${Date.now()}.webm`;
        const file = new File([audioBlob], fileName, { type: blobType });

        // –ï—Å–ª–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –Ω–∞–∂–∞–ª "–æ—Ç–ø—Ä–∞–≤–∏—Ç—å" - –æ—Ç–ø—Ä–∞–≤–ª—è–µ–º –Ω–∞ —Å–µ—Ä–≤–µ—Ä
        if (shouldSendRef.current) {
          await uploadVoiceMessage(file, 0); // duration –º–æ–∂–Ω–æ –≤—ã—á–∏—Å–ª–∏—Ç—å –ø–æ–∑–∂–µ
        } else {
          console.log('–ó–∞–ø–∏—Å—å –æ—Ç–º–µ–Ω–µ–Ω–∞');
        }

        // –û—á–∏—â–∞–µ–º
        audioChunksRef.current = [];

        // –û—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –º–∏–∫—Ä–æ—Ñ–æ–Ω
        if (streamRef.current) {
          streamRef.current.getTracks().forEach(track => track.stop());
          streamRef.current = null;
        }
      };

      // –ù–∞—á–∏–Ω–∞–µ–º –∑–∞–ø–∏—Å—å
      mediaRecorderRef.current.start();
      setRecording(true);
      console.log('–ó–∞–ø–∏—Å—å –Ω–∞—á–∞—Ç–∞');

    } catch (error) {
      console.error('–û—à–∏–±–∫–∞ –ø—Ä–∏ –∑–∞–ø–∏—Å–∏:', error);
      alert(`–ù–µ —É–¥–∞–ª–æ—Å—å –Ω–∞—á–∞—Ç—å –∑–∞–ø–∏—Å—å: ${error.message}`);
    }
  };

  const stopRecording = () => {
    if (mediaRecorderRef.current?.state === 'recording') {
      console.log('–û—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –∑–∞–ø–∏—Å—å');
      mediaRecorderRef.current.stop();
      setRecording(false);
    }
  };

  const handleRecordClick = () => {
    if (recording) {
      stopRecording();
    } else {
      startRecording();
    }
  };

  const handleSendClick = () => {
    shouldSendRef.current = true;
    stopRecording();
  };

  const handleCancelClick = () => {
    shouldSendRef.current = false;
    stopRecording();
  };

  // –û—á–∏—Å—Ç–∫–∞
  useEffect(() => {
    return () => {
      if (streamRef.current) {
        streamRef.current.getTracks().forEach(track => track.stop());
      }
    };
  }, []);

  return (
    <>
      {!recording ? (
        <button 
          className="Chat-form__button" 
